    // Populate state dropdown
    const stateSelect = document.getElementById('state');
    Object.keys(window.CITIES_BY_STATE).forEach(stateCode => {
      const opt = document.createElement('option');
      opt.value = stateCode;
      opt.textContent = stateCode;
      stateSelect.appendChild(opt);
    });

    // Populate city dropdown when state changes
    stateSelect.addEventListener('change', function() {
      const citySelect = document.getElementById('city');
      citySelect.innerHTML = '<option value="">-- Select a city --</option>';
      const cities = window.CITIES_BY_STATE[this.value] || [];
      cities.forEach(city => {
        const opt = document.createElement('option');
        opt.value = city;
        opt.textContent = city;
        citySelect.appendChild(opt);
      });
    });

    function searchBusiness() {
      const state = document.getElementById('state').value;
      const city = document.getElementById('city').value;
      const resultsDiv = document.getElementById('results');

      if (!state || !city) {
        resultsDiv.innerHTML = '<p style="color:red;">Please select both state and city.</p>';
        return;
      }

      // Placeholder search results
      resultsDiv.innerHTML = `<p>Searching for businesses in <strong>${city}, ${state}</strong>...</p>`;
    }
